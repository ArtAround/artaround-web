      <ul>
        <li>
          <label>Location Description</label>
          <textarea id="id_locDescription" name="text"></textarea>
        </li>
        <li>
          <button class="submitBtn" type="submit">
              <span>Submit</span>
          </button>
        </li>
        <li>
          <a class="cancelBtn buttonLink " href="#">Cancel</a>
        </li> 
      </ul>
    </form>
    <div class="clear"></div>
    
  </div>
  
  <div class="module" id="comments">
