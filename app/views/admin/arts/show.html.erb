          <%= link_to "" , destroy_link_admin_art_path(al),:class => "delete_icon" ,:remote => true %>
          <%= link_to "" ,"javascript:void(0)",:class => "edit_icon" ,:art_link_id => al.id ,:art_link_title => al.title ,:art_link_url => al.link_url %>
