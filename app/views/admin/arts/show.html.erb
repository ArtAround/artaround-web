      <% @art.errors.full_messages.each do |message| %>
        <div class="errors">
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <ul>
      <li>
        <%= f.label :featured %>
        <%= f.check_box :featured %>
      </li>
      <li>
        <%= f.label :commissioned %>
        <%= f.check_box :commissioned %>
      </li>
      <li>
        <%= f.label :approved %>
        <%= f.check_box :approved %>
      </li>
      <li>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>
      <li>
        <%= f.label :slug %>
        <%= f.text_field :slug %>
      </li>
      <li>
        <%= f.label :website %>
        <%= f.text_field :website %>
      </li>
      <li>
        <%= f.label :category %>
        <%= f.select :category, categories, {:include_blank => "---"} %>
      </li>
      <li>
        <%= f.label :neighborhood %>
        <%= f.select :neighborhood, neighborhoods, {:include_blank => "---"} %>
      </li>
      <li>
        <%= f.label :year %>
        <%= f.text_field :year %>
      </li>
      <li>
        <%= f.label :ward %>
        <%= f.text_field :ward %>
      </li>
      <li>
        <%= f.label :latitude %>
        <%= f.text_field :latitude %>
      </li>
      <li>
        <%= f.label :longitude %>
        <%= f.text_field :longitude %>
      </li>
      <li>
        <%= f.label :artist, "Artist(s)" %>
        <%= f.text_field :artist %>
      </li>
      <li>
        <%= f.label :location_description %>
        <%= f.text_area :location_description %>
      </li>
      <li>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </li>
      <li>
        <%= f.label :event_id %>
        <%= f.collection_select :event_id, @events, :id, :name, :include_blank => "----" %>
      </li>
      <li>
        <button class="submitBtn" type="submit">
            <span>Submit</span>
        </button>
      </li>
    </ul>
  <% end %>

  <% @art.photos.each do |photo| %>
    <%= render "admin/photos/show", :art => @art, :photo => photo %>
  <% end %>

</div>

<div id="rtColumn">
