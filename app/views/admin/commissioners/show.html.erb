<div id="pageMain" class="admin">

  <div id="fullColumn">
    <div id="titleContent">
        <h2>Admin Area</h2>
    </div>
  </div>

  <div id="ltColumn">
    <% unless @commissioner.logo.nil? %>
      <%= image_tag(@commissioner.logo(:big)) %>
    <% end %>
    <%= form_for @commissioner, :url => admin_commissioner_path do |f| %>
    <ul>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li>
        <%= f.label :url %>
        <%= f.text_field :url %>
      </li>
      <li>
        <%= f.label :logo %>
        <%= f.file_field :logo %>
      </li>
      <li>
        <button class="submitBtn" type="submit">
            <span>Submit</span>
        </button>
      </li>
    </ul>
    <% end %>
    <%= button_to "Delete", admin_commissioner_path(@commissioner), :method => 'delete', :confirm => "Are you sure you want to delete this commissioner?" %>
  </div>

  <div class="clear"></div>

</div>
